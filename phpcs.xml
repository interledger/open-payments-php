<?xml version="1.0"?>
<ruleset name="Custom Ruleset">
    <!-- Set encoding -->
    <arg name="encoding" value="utf-8"/>

    <!-- Set line length to 85 characters for warnings -->
    <rule ref="Generic.Files.LineLength">
        <properties>
            <property name="lineLimit" value="85"/>
            <property name="absoluteLineLimit" value="100"/>
        </properties>
        <severity>5</severity>
        <type>warning</type>
    </rule>

    <!-- Enable automatic fixes for warnings -->
    <config name="phpcbf" value="true"/>

    <!-- Add more rules as needed -->
</ruleset>
